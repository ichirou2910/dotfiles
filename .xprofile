#!/usr/bin/env sh

export GTK_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
export QT_IM_MODULE=ibus

# If running in PC
if [[ $(< /etc/hostname) == 'ArchLinux-PC' ]]; then
    xrandr --output DP-1 --off
# If running in laptop
elif [[ $(< /etc/hostname) == 'IK-arch' ]]; then
    # setup screens
    xrandr --setprovideroutputsource modesetting NVIDIA -0
    xrandr --auto
    # start optimus manager at boot
    optimus-manager-qt &
fi

ibus-daemon -drx --panel /usr/lib/ibus/ibus-ui-gtk3
dunst &
~/.fehbg &
sxhkd -m 1 &
setxkbmap -option caps:swapescape
notify-send -i /home/ichirou2910/Pictures/Ichirou2910.jpg "Welcome Ichirou Keita, have a nice day!"
