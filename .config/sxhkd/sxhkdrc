
# BASIC BINDING
# -------------
super + Return						
	$TERMINAL
super + i								
    $TERMINAL --title "Ranger" -e $FILE
super + e							
	$TERMINAL -e neomutt
super + w					
	$BROWSER
super + s
	spotify
super + d							
	rofi -show drun
super + shift + d							
	rofi -show run
super + m
	ncmpcpp
super + n
	$TERMINAL --title "BG Notes" -e $EDITOR $BG_NOTES
alt + Tab							
	rofi -show window
alt + shift + q
    powermenu --popup

# SCREEN CAPTURE + RECORDING
# -------------------------

# capture whole screen -> clipboard
Print								
	maim | xclip -selection clipboard -t image/png && notify-send -i $HOME/.config/home/icons/screenshot.png -a "maim" "Full Window" "Screenshot copied."
# capture whole screen -> save
super + Print
    maim $SCREENSHOTDIR/$(date +%Y-%M-%d_%H:%M:%s).png && notify-send -i $HOME/.config/home/icons/screenshot.png -a "maim" "Full Window" "Screenshot saved."
# capture active window -> clipboard
alt + Print
	maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png && notify-send -i $HOME/.config/home/icons/screenshot.png -a "maim" "Active window " "Screenshot copied."
# capture active window -> save
alt + shift + Print
	maim -i $(xdotool getactivewindow) $SCREENSHOTDIR/$(date +%Y-%M-%d_%H:%M:%s).png && notify-send -i $HOME/.config/home/icons/screenshot.png -a "maim" "Active window " "Screenshot saved."
# capture selected region -> clipboard
ctrl + alt + a
	maim -s | xclip -selection clipboard -t image/png && notify-send -i $HOME/.config/home/icons/screenshot.png -a "maim" "Selected Region" "Screenshot copied."
# capture selected region -> save
ctrl + shift + a
	maim -s $SCREENSHOTDIR/`date +%Y-%m-%d_%H:%H:%S`.png && notify-send -i $HOME/.config/home/icons/screenshot.png -a "maim" "Selected Region" "Screenshot saved."
