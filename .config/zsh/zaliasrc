#!/bin/sh

# Git aliases
alias g="git"
alias y="yadm"
alias dfe="yadm enter nvim"

# Verbosity
alias \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -vI" \
	mkdir="mkdir -pv"

# Quick edit common config files
alias \
	cfz="nvim ~/.config/zsh/.zshrc" \
	cfza="nvim ~/.config/zsh/zaliasrc"

# Common commands
alias \
	q="exit" \
	ka="killall" \
	upgr="yay -Syu" \
	se="sudo -e" \
	tas="tmux attach-session" \
	ta="tmux attach || tmux new-session" \
	td="tmux detach"
