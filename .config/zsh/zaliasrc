#!/bin/sh

# Prefer neovim if available
command -v nvim >/dev/null && alias vim="nvim" vi="nvim" vimdiff="nvim -d" oldvim="vim" oldvdiff="vimdiff"

# Git aliases
alias config="/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"
alias g="git"
alias y="yadm"
alias dfe="yadm enter nvim"

# Verbosity
alias \
    cp="cp -iv" \
    mv="mv -iv" \
    rm="rm -vI" \
    bc="bc -ql" \
    mkd="mkdir -pv" \

# ls replacement
if [ -x "$(command -v exa)" ]
then
    alias ll="exa -l -g --icons"
    alias lla="ll -a"
fi

# selective cd
alias j="cd \"\$(find . -maxdepth 1 -type d | awk '{print substr(\$1, 3)}' | fzf )\""

# Quick edit common config files
alias \
    cfz="nvim ~/.config/zsh/.zshrc" \
    cfza="nvim ~/.config/zsh/zaliasrc" \
    cfv="nvim ~/.config/nvim/init.vim" \
    cft="nvim ~/.tmux.conf.local" \
    cfa="nvim ~/.config/awesome/rc.lua" \
    cfr="nvim ~/.config/ranger/rc.conf" \
    chx="nvim ~/.xinitrc" \
    chp="nvim ~/.profile" \
    chxp="nvim ~/.xprofile"

# Common apps
alias \
    di="nnn -e" \
    dbui="nvim -c DBUI" \
    pj="tmux-vim" \
    ml="neomutt" # ml = mail

# Common commands
alias \
    q="exit"\
    ka="killall" \
    yt="youtube-dl" \
    upgr="yay -Syu" \
    se="sudo -e" \
    tas="tmux attach-session" \
    ta="tmux attach || tmux new-session" \
    td="tmux detach"
